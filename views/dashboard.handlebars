<h2>Create a new Post</h2>
<form class="post-form">
    <div>
        <label for="title-field">Post Title:</label>
        <input type="text" id="title-field" name="title-field"/>
    </div>
    <div>
        <textarea name="text-field" id="text-field" cols="80" rows="10" placeholder="Post Body Goes Here"></textarea>
    </div>
    <div>
        <button type="submit">Post</button>
    </div>
</form>

<h2>Your Posts</h2>
<ul class="post-list">
    {{#each posts as |post|}}
    <li>
        {{> post-info post}}--- <a href="/post/edit/{{id}}">edit post</a><hr>
    </li>
    {{/each}}
</ul>

<script src="/javascript/add-post.js"></script>